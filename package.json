{
  "name": "nodejs-base",
  "version": "1.0.0",
  "description": "nodejs base application",
  "main": "index.ts",
  "author": "Mohan Kandasamy",
  "license": "ISC",
  "engines": {
    "node": ">=16.14.2"
  },
  "scripts": {
    "dev": "npm run migrate && NODE_ENV=$npm_package_config_dev_env nodemon index.ts",
    "prod": "npm run build && npm start",
    "start": "npm run migrate && nodemon index.ts",
    "build": "tsc --build",
    "migrate": "npx prisma migrate dev",
    "seed": "ts-node prisma/seed.ts",
    "lint": "eslint .",
    "lint:fix": "eslint 'src/**/*.ts' 'src/*.ts' '*.ts' --quiet --fix",
    "test": "NODE_ENV=$npm_package_config_test_env mocha tests/index.ts --config=.mocharc.json --exit",
    "test:coverage": "NODE_ENV=$npm_package_config_test_env nyc npm run test",
    "coverage": "jest -i --coverage",
    "prettier": "prettier --check **/*.ts",
    "prepare": "husky install"
  },
  "config": {
    "dev_env": "dev",
    "test_env": "test"
  },
  "dependencies": {
    "@prisma/client": "^3.11.0",
    "@types/joi": "^17.2.3",
    "bcrypt": "^5.1.1",
    "chai": "^4.3.6",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-origin": "^1.0.6",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^5.0.0",
    "eslint-config-prettier": "^9.0.0",
    "express": "^4.17.3",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prisma": "^3.11.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2",
    "winston": "^3.6.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcrypt": "*",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.0",
    "@types/multer": "^1.4.7",
    "@types/sinon": "^10.0.11",
    "@types/sinon-chai": "^3.2.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "eslint": "^8.50.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^7.0.4",
    "lint-staged": "^14.0.1",
    "mocha": "^10.2.0",
    "moment": "^2.29.4",
    "prettier": "^3.0.3",
    "sinon": "^13.0.1",
    "sinon-chai": "^3.7.0"
  }
}
